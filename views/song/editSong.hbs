<h1>Edit Song</h1>

<form action="/song/{{singleSong._id}}?_method=PUT" method="POST">
    <label>Name</label>
    <input type="text" name="name" value="{{singleSong.name}}" />

    <label>Address</label>
    <input type="text" name="address" value="{{singleSong.address}}" />

    <label>Hours</label>
    <input type=" text" name="hours" value="{{singleSong.hours}}" />

    <label>TP Stock</label>
    <input type="number" min=0 max=4 name="tpStock" value="{{singleSong.tpStock}}" />

    <label>Accepted Payments</label>
    <input type="text" name="paymentTypes" value="{{singleSong.paymentTypes}}" />

    <input type="submit" value="Save" />
</form>