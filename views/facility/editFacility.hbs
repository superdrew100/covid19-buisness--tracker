<h1>Edit Facility</h1>

<form action="/facility/{{singleFacility._id}}?_method=PUT" method="POST">
    <label>Name</label>
    <input type="text" name="name" value="{{singleFacility.name}}" />

    <label>Address</label>
    <input type="text" name="address" value="{{singleFacility.address}}" />

    <label>Hours</label>
    <input type=" text" name="hours" value="{{singleFacility.hours}}" />

    <label>TP Stock</label>
    <input type="number" min=0 max=4 name="tpStock" value="{{singleFacility.tpStock}}" />

    <label>Accepted Payments</label>
    <input type="text" name="paymentTypes" value="{{singleFacility.paymentTypes}}" />

    <input type="submit" value="Save" />
</form>