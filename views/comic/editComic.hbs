<h1>Edit Comic</h1>

<form action="/comic/{{singleComic._id}}?_method=PUT" method="POST">
    <label>Name</label>
    <input type="text" name="name" value="{{singleComic.name}}" />

    <label>Writer</label>
    <input type="text" name="Writer" value="{{singleComic.Writer}}" />

    <label>Hours</label>
    <input type=" text" name="hours" value="{{singleComic.hours}}" />

    <label>Issue Number</label>
    <input type="number" min=0 name="issueNumber" value="{{singleComic.issueNumber}}" />

    <label>Accepted Payments</label>
    <input type="text" name="paymentTypes" value="{{singleComic.paymentTypes}}" />

    <input type="submit" value="Save" />
</form>